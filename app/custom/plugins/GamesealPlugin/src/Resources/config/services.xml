<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Symfony\Component\Serializer\Serializer" />
        <service id="GuzzleHttp\Client" />

        <service id="currencyapi" class="GamesealPlugin\Service\CurrencyApi\Client\CurrencyApiClient" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="Symfony\Component\Serializer\Serializer" />
            <argument type="service" id="GuzzleHttp\Client" />
        </service>

        <service id="GamesealPlugin\Command\GetCurrenciesExchangeDataCommand">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="Symfony\Component\DependencyInjection\ContainerInterface" />
            <tag name="console.command"/>
        </service>
    </services>
</container>